<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Members-Only</title>
    <link rel="stylesheet" href="/index.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
</head>
<body>
    <!-- Navigation -->
    <nav>
        <div class="container nav-content">
            <div class="logo">Members<span>Only</span></div>
            <div class="nav-links">
                <a href="#features">Features</a>
                <a href="#pricing">Pricing</a>
                <a href="#about">About</a>
            </div>
            <div class="nav-buttons">
                <button class="button button-filled"><a class="link-btn" href="/log-in">Login</a></button>
                <button class="button button-filled"><a class="link-btn" href="/sign-up">Sign Up</a></button>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero container">
        <h1 id="hero-text"><span class="reddit-text">Reddit</span> with a Catch.<br>Every Post is Anonymous, or is it?</h1>
        <p>As a member of our exclusive community, you'll gain privileged access to who post what.</p>
        <button class="button button-filled button-large"><a href="/sign-up" class="get-started">Get Started Today</a></button>
    </section>

    <script>
        // Animation for the hero text
        gsap.from("#hero-text", {
            duration: 1,
            y: 50,
            opacity: 0,
            ease: "power3.out"
        });

        // Animate features on scroll
        const features = document.querySelectorAll(".feature-card");
        features.forEach((feature, index) => {
            gsap.from(feature, {
                scrollTrigger: {
                    trigger: feature,
                    start: "top bottom-=100",
                    toggleActions: "play none none reverse"
                },
                duration: 0.6,
                y: 50,
                opacity: 0,
                delay: index * 0.2,
                ease: "power2.out"
            });
        });
    </script>
</body>
</html>